{
    "extends": "./packages/tsconfig/base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./packages/dler/src/*",
                "./examples/cli/src/*",
                "./plugins/filetype-dler-plugin/src/*",
                "./plugins/migrate-dler-plugin/src/*",
                "./plugins/pack-dler-plugin/src/*"
            ]
        }
    },
    "include": [
        "packages/dler/src/**/*.ts",
        "packages/dler/src/**/*.json",
        "examples/cli/src/**/*.ts",
        "examples/cli/src/**/*.json",
        "plugins/filetype-dler-plugin/src/**/*.ts",
        "plugins/filetype-dler-plugin/src/**/*.json",
        "plugins/migrate-dler-plugin/src/**/*.ts",
        "plugins/migrate-dler-plugin/src/**/*.json",
        "plugins/pack-dler-plugin/src/**/*.ts",
        "plugins/pack-dler-plugin/src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
        "**/build"
    ]
}