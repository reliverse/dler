{
  "name": "@reliverse/dler",
  "description": "@reliverse/dler is a framework which helps TypeScript and JavaScript developers create their libraries and CLI tools. It provides ready-to-use primitives, so you don't have to write them from scratch.",
  "author": "reliverse",
  "version": "2.0.0",
  "private": false,
  "type": "module",
  "bin": {
    "dler": "src/cli.ts"
  },
  "exports": {
    ".": {
      "types": "./cli.d.ts",
      "default": "./cli.js"
    }
  },
  "scripts": {
    "dler": "bun src/cli.ts"
  },
  "dependencies": {
    "c12": "catalog:",
    "clipboardy": "catalog:",
    "@reliverse/dler-publish": "workspace:*",
    "@reliverse/dler-bump": "workspace:*",
    "@reliverse/dler-build": "workspace:*",
    "@reliverse/dler-logger": "workspace:*",
    "@reliverse/dler-matcher": "workspace:*",
    "@reliverse/dler-launcher": "workspace:*",
    "@reliverse/dler-prompt": "workspace:*",
    "@reliverse/dler-helpers": "workspace:*",
    "@reliverse/dler-pkg-tsc": "workspace:*",
    "@reliverse/dler-mapper": "workspace:*"
  },
  "keywords": [
    "dler",
    "build"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@reliverse/dler-tsconfig": "workspace:*",
    "@microsoft/api-extractor": "catalog:",
    "@types/bun": "catalog:",
    "typescript": "catalog:",
    "ultracite": "^5.6.4"
  }
}