{
  "name": "@reliverse/dler-monorepo-deprecated",
  "author": "reliverse",
  "version": "1.7.154",
  "private": true,
  "type": "module",
  "license": "MIT",
  "description": "The TypeScript framework for building JavaScript NPM libraries. Dler is a flexible, unified, and fully automated bundler for typescript and javascript projects, as well as an npm and jsr publishing tool. dler is not only a bundler, it also tries to serve as the most powerful codemod toolkit for js/ts.",
  "engines": {
    "bun": ">=1.3.0"
  },
  "scripts": {
    "cli": "bun examples/cli/src/mod.ts",
    "pub": "bun cli publish",
    "example:magic": "bun examples/ts/magic/e-ms-inject.ts",
    "example:libs": "bun examples/ts/e-mod.ts libs",
    "build": "bun cli build",
    "release": "bun release.ts",
    "remdn": "bun cli remdn --mode dirs-scan-compare",
    "magic": "bun cli magic",
    "tests": "bun test ./.tests",
    "cmds": "bun cli rempts",
    "cmd": "bun cli rempts --init",
    "libs:pack": "bun cli pack dist-libs --output examples/ts/app/libs/mock",
    "libs:unpack": "bun cli pack examples/ts/app/libs/mock/mock-mod.ts --output dist-libs --unpack",
    "stack:pack": "bun cli pack pack-input --output pack-output/better-t-stack",
    "stack:unpack": "bun cli pack pack-output/better-t-stack/better-t-stack-mod.ts --output unpacked-output/better-t-stack --unpack",
    "latest": "bun cli update && bun install && bun check",
    "check": "bun --filter '*' check"
  },
  "workspaces": {
    "packages": ["examples/*", "packages/*", "plugins/*", "scripts/*"]
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@biomejs/biome": "catalog:",
    "@reliverse/rse": "catalog:",
    "@types/bun": "catalog:"
  },
  "packageManager": "bun@1.3.0",
  "main": "./bin/mod.js",
  "module": "./bin/mod.js",
  "types": "./bin/mod.d.ts",
  "exports": {
    ".": {
      "types": "./bin/mod.d.ts",
      "import": "./bin/mod.js"
    }
  },
  "files": ["bin"]
}
