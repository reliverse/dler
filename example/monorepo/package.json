{
  "name": "@example/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "latest": "bun ../cli.ts update",
    "latest:install": "bun latest --withInstall",
    "latest:types": "bun latest --name '@types/*'",
    "latest:react": "bun latest --name 'react*' --name '@react*'",
    "latest:no-eslint": "bun latest --ignore 'eslint*' --ignore '@typescript-eslint/*'",
    "latest:dry": "bun latest --dryRun",
    "build": "bun run build --filter='./packages/*'",
    "dev": "bun run dev --filter='./apps/*'",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "@reliverse/relico": "^1.4.0"
  },
  "dependencies": {
    "turbo": "^2.5.8"
  }
}
